#!/usr/bin/env node

var fs = require('fs');
var execSync = require('child_process').execSync;
var program = require('commander');
var chalk = require('chalk');
var lock = require('../package-lock/lock');

/**
 * Usage.
 */

program
  .usage('.');

/**
 * Help.
 */

program.on('--help', function () {
  console.log('  Examples:');
  console.log();
  console.log(chalk.gray('    # examine the current project'));
  console.log('    $ cd ~/workspace/project');
  console.log('    $ head-cli package-lock .');
  console.log();
});

/**
 * Help.
 */

function help() {
  program.parse(process.argv)
  if (program.args.length < 1) return program.help()
}
help()

/**
 * Padding.
 */

console.log()
process.on('exit', function () {
  console.log()
})

/**
 * Settings.
 */

if (!fs.existsSync('package-lock.json')) {
  execSync('npm install --package-lock-only --package-lock --omit=optional');
}

lock();

console.log(chalk.green('    âœ” $ cat ./.head-cli/inspect-package-lock.json'));
process.exit();
